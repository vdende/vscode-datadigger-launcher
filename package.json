{
  "name": "abl-datadigger",
  "publisher": "vdende",
  "displayName": "ABL DataDigger",
  "description": "OpenEdge ABL DataDigger for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "RiversideSoftware.openedge-abl-lsp"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ABL DataDigger",
      "properties": {
        "abl.datadigger.path": {
          "type": "string",
          "default": "",
          "description": "Path of the local DataDigger instance (can be relative based on the workspace root)\nOptional: when empty, the bundled DataDigger instance will be used",
          "scope": "resource",
          "order": 1
        },
        "abl.datadigger.addProjectParameters": {
          "type": "boolean",
          "default": false,
          "description": "Add the OpenEdge project client parameters when starting DataDigger",
          "scope": "resource",
          "order": 2
        },
        "abl.datadigger.extraParameters": {
          "type": "string",
          "default": "-nosplash",
          "description": "Extra parameters when starting DataDigger",
          "scope": "resource",
          "order": 3
        },
        "abl.datadigger.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging",
          "scope": "application",
          "order": 4
        }
      }
    },
    "commands": [
      {
        "command": "abl-datadigger.start",
        "title": "Start",
        "category": "ABL DataDigger"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "abl-datadigger.start",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
